<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/childName"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Kyle's Turn..."
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragGuideline2"
        app:layout_constraintStart_toStartOf="@+id/fragGuideline1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <Button
        android:id="@+id/buttonTails"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:text="Tails"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragGuideline2"
        app:layout_constraintTop_toBottomOf="@+id/childName" />

    <Button
        android:id="@+id/buttonHeads"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:text="Heads"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragGuideline1"
        app:layout_constraintTop_toBottomOf="@+id/childName" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragGuideline2"
        app:layout_constraintStart_toStartOf="@+id/fragGuideline1"
        app:layout_constraintTop_toBottomOf="@+id/buttonTails"
        app:layout_constraintVertical_bias="0.294" />

</androidx.constraintlayout.widget.ConstraintLayout>